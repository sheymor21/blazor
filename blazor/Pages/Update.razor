                    <td>@item2.Denominacion_religiosa</td>
                    }
                }
                @foreach (var item3 in db.Datos_Laborales.OrderBy(b => b.integranteId).ToList())
                {
                    @if(item.integranteId == item3.integranteId)
                    {

                    <td>@item3.Profesion</td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
